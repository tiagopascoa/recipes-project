<div class="container-fluid">
  <div class="row">
    <h1 class="d-flex justify-content-center my-4">Meat</h1>
    {{#each categoryMeat}}
      <div class="col-md-4 d-flex justify-content-center">
        <div class="card card-recipe">
          <div class="card-personal-header my-2">
            <img
              class="me-2 ms-2"
              src="/images/fork&knife-icon.png"
              width="30"
              height="30"
              alt=""
            />
            <div>OUR RECIPES</div>
          </div>
          <img src={{imageUrl}} alt="" />
          <div class="card-body">
            <h3
              class="card-title d-flex justify-content-center mb-3"
            >{{title}}</h3>
            <div class="card-specs">
              <h6 class="card-title"><i class="far fa-clock me-1"></i>{{time}}
                min</h6>
              <h6 class="card-title"><i
                  class="fas fa-drumstick-bite me-1"
                ></i>{{category}}</h6>
              {{#eq dificulty "easy"}}
                <h6 class="card-title"><i
                    class="far fa-smile me-1"
                  ></i>{{dificulty}}</h6>
              {{else}}
                {{#eq dificulty "medium"}}
                  <h6 class="card-title"><i
                      class="far fa-meh me-1"
                    ></i>{{dificulty}}</h6>
                {{else}}
                  {{#eq dificulty "hard"}}
                    <h6 class="card-title"><i
                        class="far fa-tired me-1"
                      ></i>{{dificulty}}</h6>
                  {{else}}
                  {{/eq}}
                {{/eq}}
              {{/eq}}
            </div>
            <div class="card-user">
              <h6><i class="fas fa-user-circle me-1"></i>{{user.username}}</h6>
            </div>
          </div>
          <div class="view-recipe-btn-container">
            <div class="btn btn-success mb-2">
              <a href="/recipe-page/{{_id}}">View Recipe</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>