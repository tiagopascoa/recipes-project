<div class="container-fluid">

  <div class="row">
    <div class="col-md-4 mx-auto new-recipe-card my-3">
      <h2 class="d-flex justify-content-center my-2">Update Recipe</h2>
      <form action="/recipe/{{id}}/update-recipe" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="" class="form-label">Recipe name</label>
          <input type="text" class="form-control" id="formGroupExampleInput" placeholder="" name="title" value="{{title}}" required/>
        </div>
        
        <div class="mb-3">
          <label for="recipeImageUpdate" class="form-label">Image</label>
          <input type="file" class="form-control" id="recipeImageUpdate" placeholder="" name="image">
          <label for="recipeImageUpdate" class="form-label">(Please update a new image!)</label>
        </div>        

        <div class="mb-3">
          <label for="dificultyUpdate" class="form-label">Dificulty</label>
          <div>
          <select name="dificulty" id="dificultyUpdate">
           
            <option value="hard" {{#eq dificulty "hard"}} selected {{/eq}}>Hard</option>
            <option value="medium" {{#eq dificulty "medium"}} selected {{/eq}}>Medium</option>
            <option value="easy" {{#eq dificulty "easy"}} selected {{/eq}}>Easy</option>
         
           
          </select>
          </div>
        </div>

        <div class="mb-3">
          <label for="" class="form-label">Category</label>
          <div>
            <input type="radio" id="category1" name="category" value="desert" {{#eq category "desert"}} checked {{/eq}} />
            <label for="category1">Desert</label>

            <input type="radio" id="category2"name="category" value="fish" {{#eq category "fish"}} checked {{/eq}} />
            <label for="category2">Fish</label>

            <input type="radio" id="category3"name="category" value="meat" {{#eq category "meat"}} checked {{/eq}}/>
            <label for="category3">Meat</label>

            <input type="radio" id="category4"name="category" value="vegetarian" {{#eq category "vegetarian"}} checked {{/eq}}/>
            <label for="category4">Vegetarian</label>
          </div>
        </div>

        <div class="mb-3">
          <label for="" class="form-label">Total time (minutes)</label>
          <input type="text" class="form-control" name="time" style="width:50%" value="{{time}}"required/>
        </div>

        <div class="control-group mb-2">
          <!-- Button -->
            <button class="btn btn-success" type="submit">Update Ingredients</button>
        </div>
      </form>

    </div>
  </div>
</div>