<div class="container-fluid">
  <div class="row">
    <h1>All Recipes</h1>
    {{#each recipes}}
      <div class="col-md-3">
        <div class="card">
          <div class="card-personal-header my-2">
            <img
              class="me-2 ms-2"
              src="/images/fork&knife-icon.png"
              width="30"
              height="30"
              alt=""
            />
            <div>OUR RECIPES</div>
          </div>
          <img src={{imageUrl}} alt="" />
          <div class="card-body">
            <h3 class="card-title d-flex justify-content-center mb-3">{{title}}</h3>
            <div class="card-specs mb-3">
              <h6 class="card-title"><i class="far fa-clock me-1"></i>{{time}}
                min</h6>
              {{#eq category "fish"}}
                <h6 class="card-title"><i class="fas fa-fish me-1"></i>{{category}}</h6>
              {{else}}
                {{#eq category "meat"}}
                  <h6 class="card-title"><i class="fas fa-drumstick-bite me-1"></i>{{category}}</h6>
                {{else}}
                  {{#eq category "desert"}}
                    <h6 class="card-title"><i class="fas fa-ice-cream me-1"></i>{{category}}</h6>
                  {{else}}
                    {{#eq category "vegetarian"}}
                      <h6 class="card-title"><i class="fas fa-leaf me-1"></i>{{category}}</h6>
                    {{/eq}}
                  {{/eq}}
                {{/eq}}
              {{/eq}}
              <h6 class="card-title"><i
                  class="fas fa-database me-1"
                ></i>{{dificulty}}</h6>
            </div>
            <div class="card-user">
                <h6><i class="fas fa-user-circle me-1"></i>{{user.username}}</h6>
            </div>
            </div>
                <div class="view-recipe-btn">
                <a href="#"><div>View Recipe</div></a>
            </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>