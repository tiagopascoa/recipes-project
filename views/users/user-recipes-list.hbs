<div class="container-fluid">
  <div class="row">
    <h1 class="d-flex justify-content-center my-4">My Recipes</h1>
    <h3 class="d-flex justify-content-center mb-4"><a href="">+ Create Recipe</a></h3>
</a>    
    {{#each createdRecipes}}
      <div class="col-md-4 d-flex justify-content-center">
        <div class="card card-recipe">
          <div class="card-personal-header my-2">
            <img
              class="me-2 ms-2"
              src="/images/fork&knife-icon.png"
              width="30"
              height="30"
              alt=""
            />
            <div>OUR RECIPES</div>
          </div>
          <img src={{imageUrl}} alt="" />
          <div class="card-body">
            <h3
              class="card-title d-flex justify-content-center mb-3"
            >{{title}}</h3>
            <div class="card-specs">
              <h6 class="card-title"><i class="far fa-clock me-1"></i>{{time}}
                min</h6>
              {{#eq category "fish"}}
                <h6 class="card-title"><i
                    class="fas fa-fish me-1"
                  ></i>{{category}}</h6>
              {{else}}
                {{#eq category "meat"}}
                  <h6 class="card-title"><i
                      class="fas fa-drumstick-bite me-1"
                    ></i>{{category}}</h6>
                {{else}}
                  {{#eq category "desert"}}
                    <h6 class="card-title"><i
                        class="fas fa-ice-cream me-1"
                      ></i>{{category}}</h6>
                  {{else}}
                    {{#eq category "vegetarian"}}
                      <h6 class="card-title"><i
                          class="fas fa-leaf me-1"
                        ></i>{{category}}</h6>
                    {{/eq}}
                  {{/eq}}
                {{/eq}}
              {{/eq}}
              {{#eq dificulty "easy"}}
                <h6 class="card-title"><i
                    class="far fa-smile me-1"
                  ></i>{{dificulty}}</h6>
              {{else}}
                {{#eq dificulty "medium"}}
                  <h6 class="card-title"><i
                      class="far fa-meh me-1"
                    ></i>{{dificulty}}</h6>
                {{else}}
                  {{#eq dificulty "hard"}}
                    <h6 class="card-title"><i
                        class="far fa-tired me-1"
                      ></i>{{dificulty}}</h6>
                  {{else}}
                  {{/eq}}
                {{/eq}}
              {{/eq}}
            </div>
            <div class="card-user">
              <h6><i class="fas fa-user-circle me-1"></i>{{user.username}}</h6>
            </div>
          </div>
          <div class="view-recipe-btn-container">
              <div class="view-recipe-btn mb-2"> 
                    <a href="/recipe-page/{{_id}}">View Recipe</a>
              </div>
              <div>
                <form action="/{{id}}/delete-recipe" method="POST">
                  <button class="delete-recipe-btn" type="submit">Delete Recipe</button>
                </form> 
              </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>