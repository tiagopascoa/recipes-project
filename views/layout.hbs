   <body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
          <img src="/images/fork&Knife-white-icon.png" width="40" height="40" alt="">
          <a class="navbar-brand" href="/">
          OUR RECIPES</a>
          <button class="navbar-toggler navbar-light bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto my-2">
                <form class="d-flex" action="/search" method="GET">
                    <input class="form-control me-2" type="search" placeholder="Search by recipe name" aria-label="Search" name="search">
                    <button class="btn btn-outline-success search-btn" type="submit">Search</button>
                </form>
              <li class="nav-item">
                <a class="nav-link" href="/">All Recipes</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Recipes Categories
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="/category-desert"><i class="fas fa-ice-cream me-2"></i>Deserts</a></li>
                  <li><a class="dropdown-item" href="/category-fish"><i class="fas fa-fish me-2"></i>Fish</a></li> 
                  <li><a class="dropdown-item" href="/category-meat"><i class="fas fa-drumstick-bite me-2"></i>Meat</a></li>  
                  <li><a class="dropdown-item" href="/category-vegetarian"><i class="fas fa-leaf me-2"></i>Vegetarian</a></li>
                </ul>
              </li>
            </ul>
            <ul class="navbar-nav">
                {{#if loggedInUser}}
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/user-area">
                    <i class="fas fa-user-circle"></i>
                    {{loggedInUser}} | User Area</a>
                </li>
                <li class="nav-item d-flex align-items-center">
                    <form action="/logout" method="POST">
                        <button class="nav-link logout-btn" type="submit">Logout</button>
                    </form>
                </li>                
                {{else}}
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/signup">Signup</a>
                </li>                
                {{/if}}
          </div>
        </div>
      </nav>



